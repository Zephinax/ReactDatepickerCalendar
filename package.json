    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider rollup -c",
    "size": "npm run build && size-limit",
    "checkAll": "npm run size && npm run lint && npm run test"
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "author": {
    "name": "Zephinax",
    "email": "zephinax@gmail.com",
    "url": "https://github.com/Zephinax"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "modern",
    "calendar",
    "datepicker",
    "datepicker range",
    "datepicker component",
    "beautiful",
    "animated",
    "javascript",
    "persian"
  ],
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "11 KB"
    }
  ],
  "dependencies": {
    "jalaali-js": "^1.1.0"
  },
