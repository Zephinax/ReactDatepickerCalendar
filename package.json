{
  "name": "@zephinax/react-datepicker-calendar",
  "version": "1.1.1",
  "description": "A modern, customizable React date picker with smooth animations, responsive design, and easy integration.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "homepage": "https://zephinax.github.io/ReactDatepickerCalendar",
  "bugs": {
    "url": "https://github.com/Zephinax/ReactDatepickerCalendar/issues",
    "email": "zephinax@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zephinax/ReactDatepickerCalendar.git",
    "directory": "/"
  },
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/Zephinax"
  },
  "scripts": {
